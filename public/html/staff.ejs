<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Patient Record</title>

    <style>
        body {
            padding: 50px;
            min-height: 100vh;
            background: linear-gradient(-45deg, #3D7EAA, #FFE47A);
        }
    </style>

    <script defer src="../js/patient.js"></script>
    <link rel="stylesheet" href="../css/ham.css">

</head>

<body>

    <nav role="navigation">
        <div id="menuToggle">
            <input type="checkbox" />

            <span></span>
            <span></span>
            <span></span>

            <ul id="menu">
                <a href="/home">
                    <li>Home</li>
                </a>
                <a href="/ward">
                    <li>Wards</li>
                </a>
                <a href="/patient">
                    <li>Medical Histories</li>
                </a>
                <a href="/staff">
                    <li> Staff Information</li>
                </a>
            </ul>
        </div>
    </nav>

    <div class="medHistory flex text-4xl justify-center mb-10">
        <h1>Consultant Team Record</h1>
    </div>

    <div class="grid grid-cols-2 ml-40">
        <form action="/staff" method="post">
            <div class="flex p-8 text-2xl">
                <div class="mb-3 xl:w-96">
                    <label for="exampleFormControlInput1" class="form-label inline-block mb-2 text-gray-700">Staff No:
                    </label>
                    <input type="text" name="empIDInputFieldValue" value="<%= data && data[0] ? data[0].empID : '' %>"
                        class="form-control block w-full px-3 py-2.5 text-base font-normal text-gray-900 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                        id="empIDInputField" placeholder="Enter Employee ID" />
                    <!-- search button -->
                    <button id="empIDSearchButton"
                        class="mt-2 inline-block px-4 py-2.5 text-base font-medium leading-6 text-center text-white uppercase transition bg-blue-600 rounded shadow ripple hover:shadow-lg hover:bg-blue-700 focus:outline-none">
                        Search
                    </button>
                </div>
            </div>
        </form>
        <div class="empID flex p-8 text-2xl">
            <% if (data && data[0]) { %>
                <p id="empID">Employee ID: <%= data[0].empID %>
                </p>
                <% } %>
        </div>
        <div>
        </div>
        <div class="flex p-8 text-2xl">
            <% if (data && data[0]) { %>
                <p id="empName">Employee Name: <%= data[0].empName %>
                </p>
                <% } %>
        </div>
        <div>
        </div>
        <div class="flex p-8 text-2xl">
            <% if (data && data[0]) { %>
                <p id="erole">Employee Role: <%= data[0].erole %>
                </p>
                <% } %>
        </div>
        <div class="flex p-8 text-2xl">
            <% if (data && data[0]) { %>
                <p id="prating">Performance Rating: <%= data[0].prating %>
                </p>
                <% } %>
        </div>
        <div class="flex p-8 text-2xl">
            <% if (data && data[0]) { %>
                <p id="depname">Department Name: <%= data[0].depname %>
                </p>
                <% } %>
        </div>
    </div>






    <div class="flex flex-col">
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-4 inline-block min-w-full sm:px-6 lg:px-8">
                <div class="overflow-hidden">
                    <table class="min-w-full text-center">
                        <thead class="border-b bg-gray-800">
                            <tr>
                                <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                                    From Date
                                </th>
                                <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                                    To Date
                                </th>
                                <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                                    Position
                                </th>
                                <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                                    Establishment
                                </th>
                                <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                                    Date Grade
                                </th>
                                <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                                    Performance
                                </th>
                            </tr>
                        </thead class="border-b">
                        <% if (data) { %>
                            <% data.forEach(function(item) { %>
                                <tr class="bg-white border-b transition duration-300 ease-in-out hover:bg-gray-300">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                        <%= new Date().toLocaleDateString('en-US', { year: 'numeric' , month: 'long' , day: 'numeric' }) %>
                                    </td>
                                    <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                        <%= new Date(new Date() - 24 * 60 * 60 * 1000).toLocaleDateString('en-US', { year: 'numeric' , month: 'long' ,
                                            day: 'numeric' }) %>
                                    </td>
                                    <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                        <%= item.erole %>
                                    </td>
                                    <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                        <%= item.empAddress %>
                                    </td>
                                    <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                        <%= new Date(new Date() - 24 * 60 * 60 * 1000).toLocaleDateString('en-US', { year: 'numeric' , month: 'long' ,
                                            day: 'numeric' }) %>
                                    </td>
                                    <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                        <%= item.prating %>
                                    </td>
                                </tr>
                                <% }); %>
                                    <% } %>


                    </table>
                </div>
            </div>
        </div>
    </div>
</body>

</html>