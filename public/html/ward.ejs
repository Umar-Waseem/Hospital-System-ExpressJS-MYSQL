<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Ward Record</title>

    <style>
        body {
            padding: 50px;
            min-height: 100vh;
            background: linear-gradient(-45deg, #3D7EAA, #FFE47A);
        }
    </style>

    <script src="../js/ward.js"></script>
    <link rel="stylesheet" href="../css/ham.css">

</head>

<body>

    <nav role="navigation">
        <div id="menuToggle">
            <input type="checkbox" />

            <span></span>
            <span></span>
            <span></span>

            <ul id="menu">
                <a href="/home">
                    <li>Home</li>
                </a>
                <a href="/ward">
                    <li>Wards</li>
                </a>
                <a href="/patient">
                    <li>Medical Histories</li>
                </a>
                <a href="#">
                    <li>Staff Information</li>
                </a>
            </ul>
        </div>
    </nav>

    <div class="grid grid-cols-2 ml-40">
        <form action="/ward" method="post">
            <div class="flex p-8 text-2xl">
                <div class="mb-3 xl:w-96">
                    <label for="exampleFormControlInput1" class="form-label inline-block mb-2 text-gray-700">Ward Name:
                    </label>
                    <input type="text" name="wardNoInputFieldValue"
                        value="<%= data && data[0] ? data[0].wardName : '' %>"
                        class="form-control block w-full px-3 py-2.5 text-base font-normal text-gray-900 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                        id="wardNameInputField" placeholder="Enter Patient Number" />
                    <button id="wardSearchButton"
                        class="mt-2 inline-block px-4 py-2.5 text-base font-medium leading-6 text-center text-white uppercase transition bg-blue-600 rounded shadow ripple hover:shadow-lg hover:bg-blue-700 focus:outline-none">
                        Search
                    </button>
                </div>
            </div>
        </form>
        <div class="docNo flex p-8 text-2xl">
            <% if (data && data[0]) { %>
                <p id="specialty">Specialty: <%= data[0].wardName %>
                </p>
                <% } %>
        </div>
        <div class="flex p-8 text-2xl">
            <% if (data && data[0]) { %>
                <p id="daySister">Day Sister: <%= data[0].DaySister %>
                </p>
                <% } %>
        </div>
        <div class="flex p-8 text-2xl">
            <% if (data && data[0]) { %>
                <p id="nightsister">Night Sister: <%= data[0].NightSister %>
                </p>
                <% } %>
        </div>
        <div class="flex p-8 text-2xl">
            <% if (data && data[0]) { %>
                <p id="staffNurses">Staff Nurses: <%= data[0].StaffNurses %>
                </p>
                <% } %>
        </div>

        <div class="flex p-8 text-2xl">
            <p id="nonRegNurses">Non Registered Nurses: 2</p>
        </div>
    </div>




    <div class="medHistory flex text-4xl justify-center mb-10">
        <h1>Ward Record</h1>
    </div>


    <div class="flex flex-col">
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-4 inline-block min-w-full sm:px-6 lg:px-8">
                <div class="overflow-hidden">
                    <table class="min-w-full text-center">
                        <thead class="border-b bg-gray-800">
                            <tr>
                                <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                                    Patient Number
                                </th>
                                <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                                    Patient Name
                                </th>
                                <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                                    Care Unit
                                </th>
                                <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                                    Bed Number
                                </th>
                                <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                                    Consultant
                                </th>
                                <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                                    Date Admitted
                                </th>
                            </tr>
                        </thead class="border-b">
                        <tbody>
                            <% for (var i=0; i < data.length; i++) { %>
                                <tr class="bg-white border-b transition duration-300 ease-in-out hover:bg-gray-300">
                                    <!-- <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                        <%= i + 1 %>
                                    </td> -->
                                    <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                        <%= data[i].patientID %>
                                    </td>
                                    <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                        <%= data[i].patName %>
                                    </td>
                                    <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                        <%= data[i].careunitID %>
                                    </td>
                                    <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                        <%= data[i].careunitID %>
                                    </td>
                                    <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                        <%= data[i].Consultant %>
                                    </td>
                                    <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                        <%= data[i].DateAdmitted %>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</body>

</html>